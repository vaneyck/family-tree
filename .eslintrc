{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "ignorePatterns": [
    "**/node_modules",
    "**/build",
    "**/.idea",
    "**/*.sst",
    "**/coverage",
    "**/*.json",
    "**/*.husky/",
    "**/*.lock",
    "**/*.scss",
    "**/*.env*",
    "**/*.md",
    "**/*.cy.*",
    "**/*/cypress/support/component-index.html",
    "**/*.rego"
  ],
  "rules": {
    "prettier/prettier": "error",
    "indent": "off",
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  }
}
